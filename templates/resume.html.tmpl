<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ personal.name }} - Resume</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/github-markdown-css/5.5.1/github-markdown.min.css">
  <style>
    .markdown-body {
      box-sizing: border-box;
      min-width: 200px;
      max-width: 980px;
      margin: 0 auto;
      padding: 45px;
    }
    @media (max-width: 767px) {
      .markdown-body {
        padding: 15px;
      }
    }
    
    /* Copy bullets button for job sections */
    h3 {
      position: relative;
    }
    .copy-bullets-button {
      position: absolute;
      right: 0;
      top: 50%;
      transform: translateY(-50%);
      padding: 4px 8px;
      background: #e8e8e8;
      border: 1px solid #d0d0d0;
      border-radius: 6px;
      font-size: 12px;
      cursor: pointer;
      opacity: 0.5;
      transition: opacity 0.2s, background 0.2s;
      color: #666;
    }
    .copy-bullets-button:hover {
      opacity: 1;
      background: #d8d8d8;
    }
    .copy-bullets-button.copied {
      background: #2da44e;
      color: white;
      border-color: #2da44e;
      opacity: 1;
    }
  </style>
</head>
<body>
  <article class="markdown-body">
    {% if personal.name or personal.location or personal.email or personal.phone or personal.linkedin or personal.github or personal.portfolio %}
    <h1>{{ personal.name }}</h1>
    <p>
      {% if personal.location %}{{ personal.location }}{% endif %}
      {% if personal.email %} • <a href="mailto:{{ personal.email }}">{{ personal.email }}</a>{% endif %}
      {% if personal.phone %} • {{ personal.phone }}{% endif %}
      {% if personal.linkedin %} • <a href="https://{{ personal.linkedin }}">LinkedIn</a>{% endif %}
      {% if personal.github %} • <a href="https://{{ personal.github }}">GitHub</a>{% endif %}
      {% if personal.portfolio %} • <a href="https://{{ personal.portfolio }}">Portfolio</a>{% endif %}
    </p>
    {% endif %}

    {% if education %}
    <h2>Education</h2>
    {% for e in education %}
    <h3>{{ e.institution }}{% if e.location %} – <em>{{ e.location }}</em>{% endif %}</h3>
    <ul>
    {% for d in e.degrees %}
      <li>
        <strong>{{ d.degree }}</strong>
        {% if d.start or d.end %}<span style="float: right;"><em>{{ d.start }}–{{ d.end }}</em></span>{% endif %}
        {% if d.gpa %}<br>GPA: {{ d.gpa }}{% endif %}
        {% if d.details %}<br>{{ d.details | join(', ') }}{% endif %}
      </li>
    {% endfor %}
    </ul>
    
    {% if e.awards %}
    <p><strong>Awards:</strong></p>
    <ul>
      {% for award in e.awards %}
      <li>{{ award }}</li>
      {% endfor %}
    </ul>
    {% endif %}
    {% endfor %}
    {% endif %}

    {% if experiences %}
    <h2>Experience</h2>
    {% for exp in experiences %}
    <h3>{{ exp.company }}{% if exp.location %} – <em>{{ exp.location }}</em>{% endif %}</h3>
    <p><strong>{{ exp.role }}</strong>{% if exp.start or exp.end %} <span style="float: right;"><em>{{ exp.start }}–{{ exp.end }}</em></span>{% endif %}</p>
    <ul>
    {% for b in exp.bullets %}
      <li>{{ b.text }}</li>
    {% endfor %}
    </ul>
    {% endfor %}
    {% endif %}

    {% if projects %}
    <h2>Projects</h2>
    {% for p in projects %}
    <h3>{{ p.name }}{% if p.url %} — <a href="https://{{ p.url }}">{{ p.url }}</a>{% endif %}</h3>
    {% if p.dates %}{% if p.dates.start or p.dates.end %}<p><span style="float: right;"><em>{{ p.dates.start }}{% if p.dates.end %}–{{ p.dates.end }}{% endif %}</em></span></p>{% endif %}{% endif %}
    {% if p['tech-used'] %}<p><em>{{ p['tech-used'] }}</em></p>{% endif %}
    <ul>
    {% for b in p.bullets %}
      <li>{{ b.text }}</li>
    {% endfor %}
    </ul>
    {% endfor %}
    {% endif %}

    {% if skills %}
    <h2>Technical Skills</h2>
    <ul>
    {% for s in skills %}
      <li><em>{{ s.category }}</em>: {{ s['items'] | join(', ') }}</li>
    {% endfor %}
    </ul>
    {% endif %}
  </article>

  <script>
    // Function to find all bullets after an element until next heading
    function getBulletsAfterElement(startElement) {
      const bullets = [];
      let current = startElement.nextElementSibling;
      
      // Walk through siblings until we hit another h3 or h2
      while (current && !['H2', 'H3'].includes(current.tagName)) {
        if (current.tagName === 'UL') {
          // Found a bullet list, extract all items
          current.querySelectorAll('li').forEach(li => {
            bullets.push(li.textContent.trim());
          });
        }
        current = current.nextElementSibling;
      }
      
      return bullets;
    }
    
    // Add copy buttons to h3 headings under "Experience" and "Projects" sections
    let inExperienceOrProjects = false;
    
    document.querySelectorAll('h2, h3').forEach(heading => {
      // Track if we're in Experience or Projects section
      if (heading.tagName === 'H2') {
        const text = heading.textContent.toLowerCase();
        inExperienceOrProjects = text.includes('experience') || text.includes('projects');
        return;
      }
      
      // Only add buttons to h3 in Experience/Projects sections
      if (heading.tagName === 'H3' && inExperienceOrProjects) {
        const button = document.createElement('button');
        button.className = 'copy-bullets-button';
        button.textContent = 'Copy';
        button.onclick = async (e) => {
          e.stopPropagation();
          
          const bullets = getBulletsAfterElement(heading);
          
          if (bullets.length > 0) {
            const text = bullets.map(b => '• ' + b).join('\n');
            await navigator.clipboard.writeText(text);
            button.textContent = 'Copied!';
            button.classList.add('copied');
            setTimeout(() => {
              button.textContent = 'Copy';
              button.classList.remove('copied');
            }, 2000);
          }
        };
        heading.appendChild(button);
      }
    });
  </script>
</body>
</html>